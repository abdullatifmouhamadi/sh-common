    def __create_product(self, productTemplate, image_urls):
        template = self.api.model(productTemplate.model).create(productTemplate.provide( ['seller_ids',
                                                                                  'location_id',
                                                                                  'name',
                                                                                  'barcode',
                                                                                  'weight',
                                                                                  'purchase_ok',
                                                                                  'image',
                                                                                  'sale_ok',
                                                                                  'website_published',
                                                                                  'cost_method',
                                                                                  'list_price',
                                                                                  'categ_id',
                                                                                  'public_categ_ids',
                                                                                  'standard_price']))

